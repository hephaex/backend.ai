# Backend.AI Health Checker Configuration

# Default health checker binary path
HEALTH_CHECKER_PATH=../health-checker/target/release/backend-ai-health-checker

# API Server Configuration
PORT=8095

# Multi-host monitoring (comma-separated or use host.csv)
MONITOR_HOSTS=localhost:8095,192.168.1.100:8095,backend-ai-node-1:8095

# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
DETAILED_CHECK_INTERVAL=60

# Authentication (if required for remote hosts)
API_USERNAME=
API_PASSWORD=
API_TOKEN=

# Monitoring settings
ENABLE_GPU_MONITORING=true
ENABLE_DOCKER_MONITORING=true
ENABLE_INFRASTRUCTURE_MONITORING=true
ENABLE_SERVICES_MONITORING=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG=false